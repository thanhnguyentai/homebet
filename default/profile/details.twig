                <input data-clear-btn="true" type="text" name="postcode" id="postcode" value="{{ customer.postcode }}"/>
                <div class="form-register-error"></div>
            </div>
        </li>

        <li class="li-form-group-row">
            <div class="label"><label for="terms" class="form-label-left">Newsletter</label></div>
