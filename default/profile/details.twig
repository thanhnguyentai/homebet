                    <input class="form-register-checkbox" type="checkbox" id="newsletter" name="newsletter" data-role="none" value="1" {% if customer.newsletter %}checked="checked"{% endif %}/>
                    <label class="form-register-label-input" for="newsletter">{{ lang('profile.details.details.personal.newsletter') }}</label>
                </div>
                <div class="form-register-error"></div>
            </div>
        </li>

        <li class="li-form-group-row" data-role="fieldcontain">
            <div class="input form-submit-button-center container-submit-fullwidth">
                <button id="register-btn" type="submit" data-theme="a">{{ lang('global.update') }}</button>
            </div>
        </li>
    </ul>
    {{ form_close() }}

