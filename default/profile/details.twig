                <input data-clear-btn="true" type="text" name="city" id="city" value="{{ customer.city }}"/>
                <div class="form-register-error"></div>
            </div>
        </li>

        <li class="li-form-group-row" data-role="fieldcontain">
            <div class="label"><label for="postcode" class="form-label-left">{{ lang('profile.details.details.personal.postcode') }}</label></div>
