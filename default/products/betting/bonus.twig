{% if customer and bonuses %}
<div class="navbar-title3 top-curve"><h2>Bonus System</h2></div>
<ul class="bonus bottom-curve">
    {% for bonus in bonuses %}
    <li>
        <span class="bonus-per">{{ bonus.min }} - {{ bonus.max }} {{ lang('bonus.bets') }}</span>
        <span class="ui-li-aside-l">{{ bonus.percent }}%</span>
        <span class="ui-li-aside-r">{{ lang('bonus.more_win') }}</span>
    </li>
    {% endfor %}
</ul>
{% endif %}