{% if sports %}
<div class="sports-content">
    <ul data-role="listview">
        {% for sport in sports %}
        <li>
            <a href="/results/{{ sport.link }}/">
                <div class="sports-{{ sport.id }}"></div><h1 class="sports-title"><span class="span-nowrap">{{ sport.name }}</span></h1>
                <span class="ui-li-count">{{ sport.count.total }}</span>
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
{% endif %}