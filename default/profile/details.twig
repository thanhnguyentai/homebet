                <input data-clear-btn="true" type="text" name="street" id="street" value="{{ customer.street }}"/>
                <div class="form-register-error"></div>
            </div>
        </li>
        <li class="li-form-group-row" data-role="fieldcontain">
            <div class="label"><label for="city" class="form-label-left">{{ lang('profile.details.details.personal.city') }}</label></div>
